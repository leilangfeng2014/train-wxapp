.train{
    margin: 20px 24px;

}
.trainLi{
    width: 100%;
    min-height: 210px;
    background: #fff;
    border-radius: 8px;
    margin-top: 20px;
    padding-bottom: 20px;
    border: 1px solid rgba(0,131,255,0.20);
}
.hd{
    height: 40px;
    background: rgba(0,131,255,0.20);
    border-radius: 8px;
    display: flex;
}
.name{
    flex: 1;
    font-family: PingFangSC-Semibold;
    font-size: 17px;
    color: #0083FF;
    line-height: 40px;
    padding-left: 20px;
}
.teacher{
    flex: 1;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #0083FF;
    line-height: 40px;
    padding-right: 20px;
    text-align: right
}
.trainLiBox{
    padding: 0 10px;
}
.tlist{
    display: flex;
}
.tlist text{
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #0083FF;
    line-height: 20px;
}
.tbd{
    margin-top: 16px;
    margin-bottom: 14px;
}
.tbd text{
    font-family: PingFangSC-Semibold;
}


.trainTeacher .hd{
    height: 70px;
    padding-top: 8px;
}
.trainTeacher .name{
    flex: 1;
    font-size: 14px;
    line-height: 24px;
}
.trainTeacher button{
    font-size: 12px;
    line-height: 24px;
    height: 24px;
    color: #fff;
    margin-top: 5px;
    background-color:#0083FF;
    font-family:PingFangSC-Regular;
    width: 80px;
}
.trainTeacher .teacher{
    flex: 2;
    line-height: 20px;
    font-size: 13px;
}


.tbox{
    margin: 12px 15px 20px;
}
.course{
    position: relative;
    margin-bottom: 12px;
}
.avatar{
    width: 18px;
    height: 18px;
    position: absolute;
    left: 0;
}
.avatar image{
    width: 18px;
    height: 18px;
}
.courseText{
    padding-left: 24px;
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #0083FF;
    line-height: 17px;
}
.textHd{
    font-family: PingFangSC-Semibold;
    font-size: 14px;
    color: #0083FF;
    line-height: 20px;
    margin-bottom: 10px;
}
.btnBox{
    display: flex;
    margin-top: 16px;
}
.btnBox button{
    width: 94px;
    height: 24px;
    line-height: 24px;
    background: #0083FF;
    border-radius: 3px;
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #FFFFFF;
}


.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
  }

  .modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
  }

  .modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
  }

  .modal-content {
    padding: 50rpx 32rpx;
  }

  .modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
  }

  .modal-input .input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
  }

  input-holder {
    color: #666;
    font-size: 28rpx;
  }

  .modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
  }

  .btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
  }

  .btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
  }
